
<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Wishlist</h1>
                <nav class="d-flex align-items-center">
                    <a href="/">Home<span class="lnr lnr-arrow-right"></span></a>
                    <a href="/wishlist">wishlist</a>
                </nav>
            </div>
        </div>
    </div>
</section>
<section class="latest-product-area pb-40 category-list">
  <div class="col-md-12 mt-3">
      <div class="container">
        <h1>My Wishlist</h1>
        <div class="row mt-3">
          
          {{#each products}}
          
          <div class="card ml-3" style="width:17rem; height:auto;">
            <div class="card-body">
                 <div class="">
            <div class="single-product">
              <a href="/product/{{this._id}}">
                <img class="img-fluid drift-demo-trigger" src="/product/{{this.product._id}}1.jpg" alt=""
                  ></a>
              <div class="product-details">
                <h6>{{this.product.title}}</h6>
                <div class="price">
                  <h6>₹{{this.product.price}}</h6>
                  {{#if
									catOfferPercentage}}
									<h6 class="l-through text-danger">₹{{this.actualPrice}} </h6>
									<h5 class="text text-success">({{this.catOfferPercentage}}%)</h5>
									{{/if}}
                </div>
                <div class="prd-bottom">
                  <a onclick="addToCart('{{this.product._id}}')" class="btn btn-success"
                    style="text-decoration:none; color:white">
                    Add to bag
                  </a>
                  <a class="btn btn-danger" style="text-decoration:none; color:white"
                    onclick="deleteWish('{{this._id}}','{{this.product._id}}')">Remove</a>
                </div>
              </div>
            </div>
          </div>
            </div>
          </div>
          
          {{/each}}
        </div>
      </div>
    </div>
         </section>