<div class="container mt-5 pt-5">
    <div class="col-lg-8 mt-5 pt-5">
        <h3>Add new address</h3>
        <form action="/add-new-address" class="row contact_form" id="address-form" method="post">
            <div class="col-md-6 form-group p_star">
                <label for="name">First Name</label>
                <input type="text" class="form-control" id="first" name="fname">
                {{!-- <span class="placeholder"></span> --}}
            </div>
            <div class="col-md-6 form-group p_star">
                <label for="name">Last Name</label>
                <input type="text" class="form-control" id="last" name="lname">
                {{!-- <span class="placeholder"></span> --}}
            </div>
            <div class="col-md-12 form-group p_star">
                <label for="number">Address</label>
                <input type="text" class="form-control" id="add1" name="address">
                {{!-- <span class="placeholder" data-placeholder="Address line 01"></span> --}}
            </div>
            <div class="col-md-12 form-group p_star">
                <label for="number">Town/City</label>
                <input type="text" class="form-control" id="town" name="town">
                {{!-- <span class="placeholder" data-placeholder="Address line 02"></span> --}}
            </div>
            <div class="col-md-12 form-group p_star">
                <label for="number">State</label>
                <input type="text" class="form-control" id="state" name="state">
                {{!-- <span class="placeholder" data-placeholder="Address line 02"></span> --}}
            </div>

            <div class="col-md-12 form-group">
                <label for="Postcode">Post code</label>
                <input type="number" class="form-control" id="zip" name="zip">
                <input type="text" name="userId" id="" value="{{user._id}}" hidden>

            </div>
            <div class="col-md-6 form-group p_star">
                <label for="number">Email</label>
                <input type="text" class="form-control" id="email" name="email">
            </div>
            <div class="col-md-6 form-group p_star">
                <label for="number">Phone number</label>
                <input type="number" class="form-control" id="number" name="number">

            </div>

    </div>
    <button type="submit" class="btn btn-primary" style="width: fit-content;">Save address</button>
    </form>


</div>
</div>
</div>
<script>
    function isNumber(evt) {
        evt = (evt) ? evt : window.event;
        var charCode = (evt.which) ? evt.which : evt.keyCode;
        if (charCode > 31 && (charCode < 48 || charCode > 57)) {
            return false;
        }
        return true;
    }
</script>