<!-- data-table-->
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
<!-- data-table-->

<section class="my-3" style="min-height:80vh ;">
  <div class="container">
    <ol class="breadcrumb">
        <li class="pr-3"><a href="/admin" style="text-decoration: none;">Home</a></li>
        <li class="active">Products</li>
    </ol>
    <table class="table table-bordered mt-5" id="myTable">
            <thead>
              <tr>
                <th scope="col">No</th>
                <td scope="col">Title</td>
                <td scope="col">Category</td>
                <td scope="col">Type</td>
                <td scope="col">Price</td>
                <td scope="col">Stock</td>
                <th>Image</th>
                <td scope="col">Option</td>
                <td scope="col">Delete</td>
              </tr>
            </thead>
            <tbody>
              {{#each products}}
              <tr>
                <th scope="row">{{inc @index}}</th>
                <td>{{this.title}}</td>
                {{!-- <td>{{this.Description}}</td> --}}
                <td>{{this.category}}</td>
                <td>{{this.type}}</td>

                <td>{{this.price}}</td>
                <td>{{this.stock}}</td>
                <td><img style="width:50px; height:50px" src="/product/{{this._id}}0.jpg" alt=""></td>
                <td><button class="btn-primary"><a style="text-decoration:none; color:white"
                      href="/admin/edit-product/{{this._id}}">EDIT</a></button> </td>
                <td> <button class="btn-danger"><a style="text-decoration:none; color:white"
                      href="/admin/delete-product/{{this._id}} "
                      onclick="return confirm('Do you want to delete{{this.Name}}?')">DELETE</a></button> </td>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
          <a href="/admin/add-product" class="btn btn-primary btn-block text-uppercase mt-2">Add new product</a>
        </div>
        </section>
        <!-- table container -->
        
  

<script>
  $(document).ready(function () {
    $('#table_id').DataTable();
  });
</script>