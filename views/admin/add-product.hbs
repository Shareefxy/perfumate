                <td>
                  <label for="category" class="text-white ">Category</label>
                  <select name="type" class="custom-select tm-select-accounts" id="occassion">

                    <option selected>Type</option>
                    <option value="Men">Men</option>
                    <option value="Women">Women</option>
                    <option value="Unisex">Unisex</option>
                   
                  </select>
                </td>
              </div>
              <div class="form-group ">
                <label for="category">Brands</label>
                <select name="category" class="custom-select tm-select-accounts " id="category">
                  {{#each category}}
                  <option>{{this.name}}</option>
                  {{/each}}
                </select>
              </div>
              <div class="form-group mt-3 col-xs-12 ">
                <label for="stock">Price
