<style>
  .bg-img{
    width: 100%;
    height:100%;
  }
</style>

<section class="bg-img">
<div class="container" style="padding-top:200px; ">
  <div class="row" >
    <div class="col-12 mx-auto tm-login-col" >
      <div class="tm-bg-primary-dark tm-block tm-block-h-auto" style="background-image:url(/banner/7241636.jpg);">
        <div class="row">
          <div class="col-12 text-center">
            <h2 class="tm-block-title mb-4">Login</h2>
          </div>
        </div>
        <div class="row mt-2">
          <div class="col-12">
            <form action="/admin/Login" method="post" class="tm-login-form">
              <div class="form-group">
                <label for="email" style="color:white ;">Email</label>
                <input name="email" type="email" class="form-control validate" id="username" required />
              </div>
              <div class="form-group mt-3">
                <label for="password" style="color:white ;">Password</label>
                <input name="password" type="password" class="form-control validate" id="password" value="" required />
              </div>
              {{#if adminErr}}
              <p class="text-danger">Invalid email or password</p>
              {{/if}}
              <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary btn-block text-uppercase">
                  Login
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</section>
<script src="/admin/js/jquery-3.3.1.min.js"></script>
