<section class="my-3"style="min-height:80vh ;">
<div class="container">
  <ol class="breadcrumb">
        <li class="pr-3"><a href="/admin" style="text-decoration: none;">Home</a></li>
        <li class="active">Category</li>
    </ol>
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary mx-5 my-5" data-toggle="modal" data-target="#exampleModal" style="float:right;">
  Add Category
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add Category</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/admin/add-category" method="post">
          {{#if categoryExist}}
          <div class="alert alert-danger col-md-6" role="alert">
            This Category is already exist!
          </div>
          {{/if}}
          <div class="form-group">
            <label for="text">Category</label>
            <input type="text" class="form-control" id="email" name="name">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-warning"> Add </button>
          </div>

      </div>
    </div>
  </div>
</div>
</form>
</div>
{{!-- </body> --}}

  <div class="container">
    <table class="table table-bordered mt-5" id="myTable">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Category</th>

          <th> </th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each datas}}
        <tr>
          <th scope="row">{{inc @index}}</th>
          <td>{{this.name}}</td>
          <td>
            <!--Modal for editing category -->
            <!-- Button trigger modal -->
            <button type="button " class="btn btn-success " data-toggle="modal" data-target="#exampleModal{{this._id}}">
              EDIT
            </button>

            <!-- Modal -->
            <div class="modal fade" id="exampleModal{{this._id}}" tabindex="-1" role="dialog"
              aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <form action="/admin/edit/{{this._id}}" method="post">
                      <h5 class="modal-title" id="exampleModalLabel">Edit Category</h5>

                  </div>
                  <div class="modal-body">
                    <input type="text" id="form2Example1" class="form-control " name="name" value="{{this.name}}"
                      style="" />
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" < a
                      href="/admin/products">Close</a></button>

                    <button class="btn btn-success border border-dark" type="submit">Save</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
            
          <td> <button class="btn-danger"><a style="text-decoration:none; color:white"
                href="/admin/delete/{{this._id}} "
                onclick="return confirm('Do you want to delete{{this.Name}}?')">DELETE</a></button> </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    </div>
  </div>
</section>

